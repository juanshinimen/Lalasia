
@model List<Lalasia.Models.Furniture>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Description</th>
            <th>Prices</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Type</td>
                <td>@item.Description</td>
                <td>$@item.Prices</td>
                <td><input type="submit" value="Buy Now" class="buy"></td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.pageNum > 1)
{

    <div class="page">
        @for (int i = 1; i <= ViewBag.pageNum; i++)
        {
            <a href="@Url.Action("Product", "Home", new { keyword = ViewBag.keyword, category = ViewBag.category, sortOrder = ViewBag.sortOrder, page = i })">@i</a>
        }
    </div>
}